<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoBolts</defName>
      <label>bolts</label>
      <parent>AmmoNeolithic</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberArrow</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_Bolt</defName>
		<label>bolts</label>
		<ammoTypes>
			<Ammo_Bolt_Steel>Projectile_Bolt_Steel</Ammo_Bolt_Steel>
			<Ammo_Bolt_Plasteel>Projectile_Bolt_Plasteel</Ammo_Bolt_Plasteel>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="AmmoArrowBase" ParentName="AmmoBase" Abstract="True">
    <description>Simple bolt design with a armorpiercing head attached to a wooden shaft.</description>
    <statBases>
      <Mass>0.11</Mass>
      <Bulk>0.11</Bulk>
      <Flammability>1</Flammability>
    </statBases>
    <thingCategories>
      <li>AmmoBolts</li>
    </thingCategories>
    <stackLimit>200</stackLimit>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting_FueledSmithy</li>
      <li>CE_AutoEnableCrafting_ElectricSmithy</li>
    </tradeTags>
  </ThingDef>

  <ThingDef ParentName="AmmoArrowBase">
    <defName>Ammo_Bolt_Steel</defName>
    <label>Bolt (steel)</label>
    <graphicData>
      <texPath>Things/Ammo/Neolithic/Bolt/Steel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.38</MarketValue>
    </statBases>
		<ammoClass>SteelBolt</ammoClass>
  </ThingDef>

  <ThingDef ParentName="AmmoArrowBase">
    <defName>Ammo_Bolt_Plasteel</defName>
    <label>Bolt (plasteel)</label>
    <graphicData>
      <texPath>Things/Ammo/Neolithic/Bolt/Plasteel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>3.32</MarketValue>
    </statBases>
		<ammoClass>PlasteelBolt</ammoClass>
		<canBeSpawningInventory>false</canBeSpawningInventory>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

	<ThingDef Name="BaseArrowProjectile" ParentName="BaseBullet" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Arrow_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Arrow</damageDef>
			<speed>44</speed>
		</projectile>
	</ThingDef>


	<ThingDef ParentName="BaseArrowProjectile">
		<defName>Projectile_Bolt_Steel</defName>
		<label>bolt (steel)</label>
		<projectile>
			<damageAmountBase>13</damageAmountBase>
			<armorPenetration>0.25</armorPenetration>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseArrowProjectile">
		<defName>Projectile_Bolt_Plasteel</defName>
		<label>bolt (plasteel)</label>
		<projectile>
			<damageAmountBase>13</damageAmountBase>
			<armorPenetration>0.30</armorPenetration>
		</projectile>
	</ThingDef>
  
	<!-- ==================== Recipes ========================== -->


  <RecipeDef ParentName="AmmoRecipeNeolithicBase">
    <defName>MakeAmmo_Bolt_Steel</defName>
    <label>make steel Bolt x10</label>
    <description>Craft 10 steel Bolts.</description>
    <jobString>Making steel Bolts.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Bolt_Steel>10</Ammo_Bolt_Steel>
    </products>
  </RecipeDef>

  <RecipeDef ParentName="AmmoRecipeNeolithicBase">
    <defName>MakeAmmo_Bolt_Plasteel</defName>
    <label>make plasteel Bolt x10</label>
    <description>Craft 10 plasteel Bolts.</description>
    <jobString>Making plasteel Bolts.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
        <li>Plasteel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Bolt_Plasteel>10</Ammo_Bolt_Plasteel>
    </products>
  </RecipeDef>
	
</Defs>