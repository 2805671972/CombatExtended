	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_TomahawkLAM</defName>
		<label>Tomahawk Missile</label>
		<ammoTypes>
			<Ammo_TomahawkLAM>Bullet_TomahawkLAM</Ammo_TomahawkLAM>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="TomahawkLAMBase" ParentName="AmmoBase" Abstract="True">
		<description>Long-range, all-weather, jet-powered, surface-launched subsonic cruise missile designed to attack land targets.</description>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>AmmoTomahawkLAM</li>
		</thingCategories>
		<stackLimit>1</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="TomahawkLAMBase">
		<defName>Ammo_TomahawkLAM</defName>
		<label>Tomahawk Missile</label>
		<graphicData>
			<texPath>Things/Ammo/Missile/TomahawkLAM</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>1500</MarketValue>
			<Mass>1440</Mass>
			<Bulk>182</Bulk>
		</statBases>
		<ammoClass>MissileHE</ammoClass>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<explosionDamage>500</explosionDamage>
				<explosionDamageDef>Bomb</explosionDamageDef>
				<explosionRadius>26</explosionRadius>
				<fragRange>10</fragRange>
				<fragments>
					<Fragment_RocketFrag>200</Fragment_RocketFrag>
				</fragments>
				<soundExplode>Explosion_GiantBomb</soundExplode>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			</li>
		</comps>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="BaseTomahawkLAM" ParentName="BaseBullet" Abstract="true">
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>185</speed>
			<soundHitThickRoof>Explosion_GiantBomb</soundHitThickRoof>
			<soundExplode>Explosion_GiantBomb</soundExplode>
			<soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
			<soundAmbient>RocketPropelledLoop_Big</soundAmbient>
			<flyOverhead>true</flyOverhead>
			<dropsCasings>false</dropsCasings>
			<casingMoteDefname>Mote_BigShell</casingMoteDefname>
		</projectile>
	</ThingDef>	

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseTomahawkLAM">
		<defName>Bullet_TomahawkLAM</defName>
		<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
		<label>Tomahawk Missile</label>
		<graphicData>
			<texPath>Things/Projectile/Missile/TomahawkLAM</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bomb</damageDef>
			<damageAmountBase>500</damageAmountBase>
			<explosionRadius>26</explosionRadius>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<fragments>
					<Fragment_RocketFrag>200</Fragment_RocketFrag>
				</fragments>				
			</li>
		</comps>
	</ThingDef>

