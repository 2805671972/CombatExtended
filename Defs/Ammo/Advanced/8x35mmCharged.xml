	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_8x35mmCharged</defName>
		<label>8x35mm Charged</label>
		<ammoTypes>
			<Ammo_8x35mmCharged>Bullet_8x35mmCharged</Ammo_8x35mmCharged>
