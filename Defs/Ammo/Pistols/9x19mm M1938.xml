<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- ========== Based off of 9x19mm Parabellum ========== -->
	
	<ThingCategoryDef>
		<defName>Ammo9x19mmM1938</defName>
		<label>9x19mm M1938</label>
		<parent>AmmoPistols</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberPistol</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_9x19mmM1938</defName>
		<label>9x19mm M1938</label>
		<ammoTypes>
			<Ammo_9x19mmM1938_FMJ>Bullet_9x19mmM1938_FMJ</Ammo_9x19mmM1938_FMJ>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="9x19mmM1938Base" ParentName="SmallAmmoBase" Abstract="True">
		<description>A stronger Italian variant of the 9x19mm Parabellum pistol cartridge.</description>
		<statBases>
			<Mass>0.014</Mass>
			<Bulk>0.01</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo9x19mmM1938</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="9x19mmM1938Base">
		<defName>Ammo_9x19mmM1938_FMJ</defName>
		<label>9x19mm M1938 cartridge (FMJ)</label>
		<graphicData>
			<texPath>Things/Ammo/Pistol/FMJ</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.06</MarketValue>
		</statBases>
		<ammoClass>FullMetalJacket</ammoClass>
		<cookOffProjectile>Bullet_9x19mmM1938_FMJ</cookOffProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="Base9x19mmM1938Bullet" ParentName="BaseBullet" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>80</speed>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base9x19mmM1938Bullet">
		<defName>Bullet_9x19mmM1938_FMJ</defName>
		<label>9x19mm M1938 bullet (FMJ)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>13</damageAmountBase>
			<!--<armorPenetrationBase>0.31</armorPenetrationBase>-->
			<armorPenetrationSharp>5</armorPenetrationSharp>
			<armorPenetrationBlunt>10.66</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeAmmo_9x19mmM1938_FMJ</defName>
		<label>make 9x19mm M1938 (FMJ) cartridge x500</label>
		<description>Craft 500 9x19mm M1938 (FMJ) cartridges.</description>
		<jobString>Making 9x19mm M1938 (FMJ) cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_9x19mmM1938_FMJ>500</Ammo_9x19mmM1938_FMJ>
		</products>
		<workAmount>1500</workAmount>
	</RecipeDef>

</Defs>
