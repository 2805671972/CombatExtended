<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ========== Based off of 9x19mm Parabellum ========== -->

	<ThingCategoryDef>
		<defName>Ammo9mmGlisenti</defName>
		<label>9mm Glisenti</label>
		<parent>AmmoPistols</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberPistol</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_9mmGlisenti</defName>
		<label>9mm Glisenti</label>
		<ammoTypes>
			<Ammo_9mmGlisenti_FMJ>Bullet_9mmGlisenti_FMJ</Ammo_9mmGlisenti_FMJ>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="9mmGlisentiBase" ParentName="SmallAmmoBase" Abstract="True">
		<description>Low powered pistol cartridge used by a variety of Italian handguns and SMGs.</description>
		<statBases>
			<Mass>0.008</Mass>
			<Bulk>0.01</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo9mmGlisenti</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="9mmGlisentiBase">
		<defName>Ammo_9mmGlisenti_FMJ</defName>
		<label>9mm Glisenti cartridge (FMJ)</label>
		<graphicData>
			<texPath>Things/Ammo/Pistol/FMJ</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.06</MarketValue>
		</statBases>
		<ammoClass>FullMetalJacket</ammoClass>
		<cookOffProjectile>Bullet_9mmGlisenti_FMJ</cookOffProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="Base9mmGlisentiBullet" ParentName="BaseBullet" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>55</speed>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base9mmGlisentiBullet">
		<defName>Bullet_9mmGlisenti_FMJ</defName>
		<label>9mm Glisenti bullet (FMJ)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>9</damageAmountBase>
			<!--<armorPenetrationBase>0.31</armorPenetrationBase>-->
			<armorPenetrationSharp>3.5</armorPenetrationSharp>
			<armorPenetrationBlunt>8.66</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeAmmo_9mmGlisenti_FMJ</defName>
		<label>make 9mm Glisenti (FMJ) cartridge x250</label>
		<description>Craft 250 9mm Glisenti (FMJ) cartridges.</description>
		<jobString>Making 9mm Glisenti (FMJ) cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>12</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_9mmGlisenti_FMJ>250</Ammo_9mmGlisenti_FMJ>
		</products>
		<workAmount>1200</workAmount>
	</RecipeDef>

</Defs>
