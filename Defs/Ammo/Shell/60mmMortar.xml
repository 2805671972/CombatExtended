      <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
      <explosionEffect>ExtinguisherExplosion</explosionEffect>
    </projectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->


  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeShell_60mm_HE</defName>
    <label>make 60mm HE mortar shells x5</label>
    <description>Craft 5 60mm HE mortar shells.</description>
    <jobString>Making 60mm HE mortar shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>FSX</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>FSX</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Shell_60mm_HE>5</Shell_60mm_HE>
    </products>
    <workAmount>4800</workAmount>
  </RecipeDef>

