		<jobString>Making Ratkin ballista bolts.</jobString>
		<workAmount>1100</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
