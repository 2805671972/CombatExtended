			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_DoomClassicRocket_HEAT>5</Ammo_DoomClassicRocket_HEAT>
		</products>
	</RecipeDef>

