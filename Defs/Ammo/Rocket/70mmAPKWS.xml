<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo70mmAPKWS</defName>
		<label>70mm APKWS rocket</label>
		<parent>AmmoRockets</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRocket</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_70mmAPKWS</defName>
		<label>70mm APKWS Rockets</label>
		<ammoTypes>
			<Ammo_70mmAPKWS_HEAT>Bullet_70mmAPKWS_HEAT</Ammo_70mmAPKWS_HEAT>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="70mmAPKWSBase" ParentName="AmmoBase" Abstract="True">
		<description>70mm laser-guided munition known as the Advanced Precision Kill Weapon System (APKWS), based on Hydra 70 unguided rockets.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo70mmAPKWS</li>
		</thingCategories>
		<stackLimit>25</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="70mmAPKWSBase">
		<defName>Ammo_70mmAPKWS_HEAT</defName>
		<label>70mm APKWS Rocket (HEAT)</label>
		<graphicData>
			<texPath>Things/Ammo/RPG/70mmAPKWS</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>418</MarketValue>
			<Mass>15</Mass>
			<Bulk>7.48</Bulk>
		</statBases>
		<ammoClass>RocketHEAT</ammoClass>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<explosionDamage>30</explosionDamage>
				<explosionDamageDef>Bomb</explosionDamageDef>
				<explosionRadius>1</explosionRadius>
				<fragRange>6</fragRange>
				<fragments>
					<Fragment_RocketFrag>30</Fragment_RocketFrag>
				</fragments>
				<soundExplode>MortarBomb_Explode</soundExplode>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			</li>
		</comps>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="Base70mmAPKWS" ParentName="BaseBullet" Abstract="true">
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>185</speed>
			<soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
			<soundExplode>MortarBomb_Explode</soundExplode>
			<soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
			<soundAmbient>MortarRound_Ambient</soundAmbient>
			<flyOverhead>true</flyOverhead>
			<dropsCasings>false</dropsCasings>
			<casingMoteDefname>Mote_BigShell</casingMoteDefname>
		</projectile>
	</ThingDef>	

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base70mmAPKWS">
		<defName>Bullet_70mmAPKWS_HEAT</defName>
		<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
		<label>70mm APKWS Rocket (HEAT)</label>
		<graphicData>
			<texPath>Things/Projectile/RPG/70mmAPKWS</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bomb</damageDef>
			<damageAmountBase>244</damageAmountBase>
			<explosionRadius>2</explosionRadius>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<fragments>
					<Fragment_RocketFrag>30</Fragment_RocketFrag>
				</fragments>				
			</li>
		</comps>
	</ThingDef>

