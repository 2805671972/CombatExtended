  </ThingDef>

  <ThingDef ParentName="Base73mmSovietRocket">
    <defName>Bullet_73mmSovietRocket_HEAT</defName>
    <label>73mm Soviet Rocket (HEAT)</label>
    <graphicData>
      <texPath>Things/Projectile/Rocket/73mmSovietRocket/HEAT</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <speed>87</speed>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>300</damageAmountBase>
      <armorPenetrationSharp>400</armorPenetrationSharp>
      <armorPenetrationBlunt>103.73</armorPenetrationBlunt>
    </projectile>
    <comps>
      <li Class="CombatExtended.CompProperties_ExplosiveCE">
        <damageAmountBase>150</damageAmountBase>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveRadius>1.5</explosiveRadius>
        <explosionSound>MortarBomb_Explode</explosionSound>
        <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
      </li>
	  <li Class="CombatExtended.CompProperties_Fragments">
      <fragments>
        <Fragment_Large>3</Fragment_Large>
        <Fragment_Small>47</Fragment_Small>
      </fragments>
	  </li>
    </comps>
  </ThingDef>

