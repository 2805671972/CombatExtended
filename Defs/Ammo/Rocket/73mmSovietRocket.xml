  <!-- ================== Projectiles ================== -->

  <ThingDef Name="Base73mmSovietRocket" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
