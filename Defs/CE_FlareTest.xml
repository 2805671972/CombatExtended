<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingCategoryDef>
    <defName>AmmoFlare</defName>
    <label>flare</label>
    <parent>AmmoShotguns</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberShotgun</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_Flare</defName>
    <label>12 Gauge</label>
    <ammoTypes>
      <Ammo_Flare>Bullet_Flare</Ammo_Flare>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="FlareBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>A flare for illumination.</description>
    <statBases>
      <Mass>0.023</Mass>
      <Bulk>0.06</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoFlare</li>
    </thingCategories>
    <stackLimit>5000</stackLimit>
  </ThingDef>

  <ThingDef>
    <defName>Flare</defName>
    <label>Flare</label>
    <thingClass>CombatExtended.Flare</thingClass>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <drawOffscreen>true</drawOffscreen>
    <altitudeLayer>MoteOverheadLow</altitudeLayer>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>15</glowRadius>
        <glowColor>(217,217,208,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>25</heatPerSecond>
        <heatPushMaxTemperature>100</heatPushMaxTemperature>
      </li>      
    </comps>    
    <graphicData>
        <graphicClass>Graphic_Single</graphicClass>
        <texPath>Things/Mote/SolarPinhole</texPath>        
        <color>(255, 255, 245)</color>
        <drawSize>2</drawSize>        
    </graphicData>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="FlareBase">
    <defName>Ammo_Flare</defName>
    <label>flare round</label>
    <graphicData>
      <texPath>Things/Ammo/Shotgun/Slug</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <Mass>0.048</Mass>
      <MarketValue>0.2</MarketValue>
    </statBases>
    <ammoClass>Slug</ammoClass>
    <cookOffProjectile>Bullet_Flare</cookOffProjectile>
  </ThingDef>

  <!-- ================== Projectiles ================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="BaseFlareBullet" ParentName="BaseBullet" Abstract="true">
    <thingClass>CombatExtended.ProjectileCE_Flare</thingClass>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">      
      <speed>0</speed>      
      <flyOverhead>true</flyOverhead>
      <dropsCasings>false</dropsCasings>
	    <gravityFactor>5</gravityFactor>
    </projectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseFlareBullet">
    <defName>Bullet_Flare</defName>
    <label>flare</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>   
    <projectile Class="CombatExtended.ProjectilePropertiesCE">      
      <speed>0</speed>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
      <flyOverhead>true</flyOverhead>
      <dropsCasings>false</dropsCasings>
	    <gravityFactor>5</gravityFactor>
    </projectile>     
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_Flare</defName>
    <label>make flare x200</label>
    <description>Craft 200 flare shells.</description>
    <jobString>Making flare shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Flare>200</Ammo_Flare>
    </products>
    <workAmount>2000</workAmount>
  </RecipeDef>


   <ThingDef ParentName="BaseMakeableGun">
    <defName>CE_FlareLauncher</defName>
    <label>flare launcher</label>
    <description>A simple, locally produced break-action flare launcher.</description>
    <graphicData>
      <texPath>Things/Weapons/GrenadeLauncher</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <SightsEfficiency>1</SightsEfficiency>
      <ShotSpread>0.16</ShotSpread>
      <SwayFactor>1.00</SwayFactor>
      <Bulk>7.31</Bulk>
      <Mass>2.70</Mass>
      <RangedWeapon_Cooldown>0.93</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <weaponTags>
      <li>GunHeavy</li>            
    </weaponTags>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootFlareCE</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Flare</defaultProjectile>
        <warmupTime>3</warmupTime>
        <minRange>10</minRange>
        <range>45</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Mortar_LaunchA</soundCast>
        <muzzleFlashScale>16</muzzleFlashScale>
        <circularError>3</circularError>
        <indirectFirePenalty>0.5</indirectFirePenalty>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>    
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>2.2</reloadTime>
        <ammoSet>AmmoSet_Flare</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiUseBurstMode>FALSE</aiUseBurstMode>
        <aiAimMode>SuppressFire</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_Charges">
        <chargeSpeeds>
          <li>30</li>
          <li>50</li>
          <li>70</li>
          <li>90</li>
        </chargeSpeeds>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>CE_Launchers</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>muzzle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
      </li>
    </tools>
  </ThingDef>

</Defs>
