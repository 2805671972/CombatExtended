  <CombatExtended.AttachmentDef ParentName="CE_UnderbarrelT2Base">
    <defName>CEA_ID_Underbarrel_GrenadeLauncher</defName>
    <label>M320 Grenade Launcher</label>
    <description>Placeholder.</description>
    <slotTags>
      <li>Bayonet</li> <!-- Can't be used with bayonets -->
    </slotTags>
    <statMultipliers>
      <Bulk>1.2</Bulk>
    </statMultipliers>
    <attachmentVerb>
      <verb Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootUseAttachment</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_40x46mmGrenade_HE</defaultProjectile>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <warmupTime>2.1</warmupTime>
        <range>44</range>
        <minRange>5</minRange>
        <soundCast>InfernoCannon_Fire</soundCast>
        <muzzleFlashScale>9</muzzleFlashScale>
        <ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </verb>
      <ammo>
        <magazineSize>1</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_40x46mmGrenade</ammoSet>
      </ammo>
    </attachmentVerb>
  </CombatExtended.AttachmentDef>

