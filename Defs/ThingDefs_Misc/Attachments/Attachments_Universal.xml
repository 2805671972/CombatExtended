  <!-- ==================== Industrial ==================== -->

  <!-- ====== Accessory ====== -->

  <CombatExtended.AttachmentDef ParentName="CE_AccessoryT2Base">
    <defName>CEA_ID_Accessory_Flashlight</defName>
    <label>flashlight</label>
    <statOffsets>
      <NightVisionEfficiency_Weapon>0.10</NightVisionEfficiency_Weapon>
    </statOffsets>
  </CombatExtended.AttachmentDef>

  <!-- ====== Ammo ====== -->

  <CombatExtended.AttachmentDef ParentName="CE_AmmoT2Base">
    <defName>CEA_ID_Ammo_MagStacked</defName>
    <label>Double-Stack Magazine</label>
    <statMultipliers>
      <ReloadTime>0.5</ReloadTime>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_AmmoT2Base">
    <defName>CEA_ID_Ammo_Mag50Rnd</defName>
    <label>50rd Extended Magazine</label>
    <statMultipliers>
      <ReloadTime>1.3</ReloadTime>
    </statMultipliers>
    <statReplacers>
      <MagazineCapacity>50</MagazineCapacity>
    </statReplacers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_AmmoT2Base">
    <defName>CEA_ID_Ammo_Mag100Rnd</defName>
    <label>100rd Magazine</label>
    <statMultipliers>
      <Mass>1.5</Mass>
      <Bulk>1.05</Bulk>
      <ReloadTime>2</ReloadTime>
    </statMultipliers>
    <statReplacers>
      <MagazineCapacity>100</MagazineCapacity>
    </statReplacers>
  </CombatExtended.AttachmentDef>

  <!-- ====== Bayonet ====== -->

  <CombatExtended.AttachmentDef ParentName="CE_BayonetT2Base">
    <defName>CEA_ID_Bayonet_Modern</defName>
    <label>Modern</label>
  </CombatExtended.AttachmentDef>

  <!-- ====== Muzzle ====== -->

  <CombatExtended.AttachmentDef ParentName="CE_MuzzleT2Base">
    <defName>CEA_ID_Muzzle_Compensator</defName>
    <label>Compensator</label>
    <statMultipliers>
      <SwayFactor>0.5</SwayFactor>
      <BurstShotCount>0.5</BurstShotCount>
      <Recoil>0.9</Recoil>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_MuzzleT2Base">
    <defName>CEA_ID_Muzzle_FlashHider</defName>
    <label>Flash Hider</label>
    <statMultipliers>
      <MuzzleFlash>0.5</MuzzleFlash>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_MuzzleT2Base">
    <defName>CEA_ID_Muzzle_Suppressor</defName>
    <label>Suppressor</label>
    <statMultipliers>
      <MuzzleFlash>0.70</MuzzleFlash>
      <TicksBetweenBurstShots>2</TicksBetweenBurstShots>
    </statMultipliers>
    <statOffsets>
      <HuntingStealth>0.10</HuntingStealth>
    </statOffsets>
  </CombatExtended.AttachmentDef>

  <!-- ====== Sight ====== -->

  <CombatExtended.AttachmentDef ParentName="CE_SightT2Base">
    <defName>CEA_ID_Sight_NVScope</defName>
    <label>Night Vision Scope</label>
    <statReplacers>
      <SightsEfficiency>1.1</SightsEfficiency>
      <NightVisionEfficiency_Weapon>0.15</NightVisionEfficiency_Weapon>
    </statReplacers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_SightT2Base">
    <defName>CEA_ID_Sight_2xACOG</defName>
    <label>2x ACOG</label>
    <statOffsets>
      <SightsEfficiency>2</SightsEfficiency>
    </statOffsets>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_SightT2Base">
    <defName>CEA_ID_Sight_4xACOG</defName>
    <label>4x ACOG</label>
    <statOffsets>
      <SightsEfficiency>3.5</SightsEfficiency>
    </statOffsets>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_SightT2Base">
    <defName>CEA_ID_Sight_Reflex</defName>
    <label>Reflex</label>
    <statReplacers>
      <SightsEfficiency>1.5</SightsEfficiency>
    </statReplacers>
  </CombatExtended.AttachmentDef>

  <!-- ====== Stock ====== -->

  <CombatExtended.AttachmentDef ParentName="CE_StockT2Base">
    <defName>CEA_ID_Stock_Heavy</defName>
    <label>Heavy Stock</label>
    <statMultipliers>
      <Mass>1.15</Mass>
      <SwayFactor>1.1</SwayFactor>
      <Recoil>0.75</Recoil>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_StockT2Base">
    <defName>CEA_ID_Stock_Folding</defName>
    <label>Folding Stock</label>
    <statMultipliers>
      <Mass>0.75</Mass>
      <SwayFactor>1.1</SwayFactor>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <!-- ====== Underbarrel ====== -->

  <CombatExtended.AttachmentDef ParentName="CE_UnderbarrelT2Base">
    <defName>CEA_ID_Underbarrel_Bipod</defName>
    <label>Bipod</label>
    <statMultipliers>
      <Recoil>0.85</Recoil>
      <SwayFactor>0.85</SwayFactor>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_UnderbarrelT2Base">
    <defName>CEA_ID_Underbarrel_ForegripAngled</defName>
    <label>Angled Foregrip</label>
    <statMultipliers>
      <WarmupTime>0.99</WarmupTime>
      <SwayFactor>0.9</SwayFactor>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_UnderbarrelT2Base">
    <defName>CEA_ID_Underbarrel_ForegripVertical</defName>
    <label>Vertical Foregrip</label>
    <statMultipliers>
      <SwayFactor>0.75</SwayFactor>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_UnderbarrelT2Base">
    <defName>CEA_ID_Underbarrel_GrenadeLauncher</defName>
    <label>M320 Grenade Launcher</label>
    <statMultipliers>
      <Bulk>1.2</Bulk>
    </statMultipliers>
    <attachmentVerb>
      <verb Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootUseAttachment</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_40x46mmGrenade_HE</defaultProjectile>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <warmupTime>2.1</warmupTime>
        <range>44</range>
        <minRange>5</minRange>
        <soundCast>InfernoCannon_Fire</soundCast>
        <muzzleFlashScale>9</muzzleFlashScale>
        <ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </verb>
      <ammo>
        <magazineSize>1</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_40x46mmGrenade</ammoSet>
      </ammo>
    </attachmentVerb>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef ParentName="CE_UnderbarrelT2Base">
    <defName>CEA_ID_Underbarrel_Shotgun</defName>
    <label>M26 Shotgun</label>
    <statMultipliers>
      <Bulk>1.2</Bulk>
    </statMultipliers>
    <attachmentVerb>
      <verb Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootUseAttachment</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_12Gauge_Buck</defaultProjectile>
        <warmupTime>0.6</warmupTime>
        <range>20</range>
        <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </verb>
      <ammo>
        <magazineSize>5</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_12Gauge</ammoSet>
      </ammo>
    </attachmentVerb>
  </CombatExtended.AttachmentDef>

