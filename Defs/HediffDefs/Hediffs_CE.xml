<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Global -->

  <HediffDef>
    <defName>VenomBuildup</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <label>venom buildup</label>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.15</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.45</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>Dementia</hediff>
            <mtbDays>37</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>Carcinoma</hediff>
            <mtbDays>111</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.8</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.8</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.8</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>MuscleSpasms</defName>
    <label>muscle spasms</label>
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <li Class="CombatExtended.HediffCompProperties_FleshOnly" />
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>1200</min>
          <max>2100</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <label>trivial</label>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>minor</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.40</minSeverity>
        <label>moderate</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>severe</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.1</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>extreme</label>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.0</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>PrometheumSoaked</defName>
    <label>Prometheum-soaked</label>
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-12</severityPerDay>
      </li>
      <li Class="CombatExtended.HediffCompProperties_Prometheum" />
    </comps>
    <stages>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>minor</label>
        <statOffsets>
          <Flammability>0.4</Flammability>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.40</minSeverity>
        <label>dripping</label>
        <statOffsets>
          <Flammability>0.8</Flammability>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>soaked</label>
        <statOffsets>
          <Flammability>1.2</Flammability>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>drenched</label>
        <statOffsets>
          <Flammability>1.5</Flammability>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <!-- Injuries -->

  <HediffDef ParentName="HediffBite">
    <defName>VenomousBite</defName>
    <label>venomous bite</label>
    <labelNoun>a venomous bite wound</labelNoun>
    <comps>
      <li Class="CombatExtended.HediffCompProperties_Venom">
        <VenomPerSeverity>0.0000134</VenomPerSeverity>
        <MinTicks>10000</MinTicks>
        <MaxTicks>17500</MaxTicks>
      </li>
    </comps>
  </HediffDef>

	<HediffDef ParentName="Burn">
		<defName>ElectricalBurn</defName>
		<label>electrical burn</label>
	</HediffDef>

	<HediffDef ParentName="InjuryBase">
		<defName>Blast</defName>
		<label>blasted</label>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>bandaged</labelTendedWell>
        <labelTendedWellInner>sutured</labelTendedWellInner>
        <labelSolidTendedWell>set</labelSolidTendedWell>
      </li>
      <li Class="CombatExtended.HediffCompProperties_InfecterCE">
        <infectionChancePerHourUntended>0.08</infectionChancePerHourUntended>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <becomePermanentChanceFactor>2</becomePermanentChanceFactor>
        <permanentLabel>old blast injury</permanentLabel>
        <instantlyPermanentLabel>permanent blast injury</instantlyPermanentLabel>
      </li>
    </comps>
		<injuryProps>
      <painPerSeverity>0.03</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
			<bleedRate>0.035</bleedRate>
			<canMerge>false</canMerge>
			<destroyedLabel>Torn off</destroyedLabel>
			<destroyedOutLabel>Torn out</destroyedOutLabel>
		</injuryProps>
	</HediffDef>
 
</Defs>
