<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Black Widow mod's bodypart defs. -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<!-- ==== Check for the mod. ==== -->
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Black Widows 2.0</modName>
			</li>

			<!-- ==== BionicPedipalp ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName = "BionicRightPedipalp" or defName = "BionicLeftPedipalp"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<success>Always</success>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>bionic right pedipalp</label>
							<capacities>
								<li>Stab</li>
							</capacities>
							<power>10</power>
							<cooldownTime>2.3</cooldownTime>
							<chanceFactor>0.5</chanceFactor>
							<armorPenetration>0.214</armorPenetration>
						</li>	
					</tools>
				</value>
			</li>

			<!-- ==== BlackWidowShredderLeg ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName = "BlackWidowShredderLeg"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<success>Always</success>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>shredder leg</label>
							<capacities>
								<li>Slash</li>
							</capacities>
							<power>15</power>
							<cooldownTime>1</cooldownTime>
							<armorPenetration>0.186</armorPenetration>
						</li>	
					</tools>
				</value>
			</li>

			<!-- ==== BlackWidowSleipnirArm ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName = "BlackWidowSleipnirArm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<success>Always</success>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>fist</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>10</power>
							<cooldownTime>2</cooldownTime>
							<armorPenetration>0.118</armorPenetration>
						</li>	
					</tools>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>