<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rim-Hivers!</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/BodyDef[defName="HiverBody"]/corePart/parts/li[def="Leg"]</xpath>
					<value>
                  					<parts>
            						<li>
              						<def>Femur</def>
              						<customLabel>right femur</customLabel>
              						<coverage>0.15</coverage>
              						<depth>Inside</depth>
              						<groups>
                					<li>Legs</li>
              						</groups>
            						</li>
            						<li>
              						<def>Tibia</def>
              						<customLabel>right tibia</customLabel>
              						<coverage>0.15</coverage>
              						<depth>Inside</depth>
              						<groups>
                					<li>Legs</li>
              						</groups>
            						</li>
                  					</parts>
					</value>
				</li>


			  <li Class="PatchOperationAdd">
				<xpath>
				  /Defs/BodyDef[defName="HiverBody"]//*[
				  def="Torso" or 
				  def="Neck" or 
				  def="Head" or 
				  def="Jaw" or 
				  def="Antenna" or
				  def="InsectNostril" or
				  def="Shoulder" or
				  def="Arm" or
				  def="Hand" or
				  def="Finger" or
				  def="Leg"]/groups
				</xpath>
				<value>
				  <li>CoveredByNaturalArmor</li>
				</value>
			  </li>

			  <li Class="PatchOperationAdd">
				<xpath>
				  /Defs/BodyDef[defName="HiverBody"]//*[
				  def="Jaw" or 
				  def="InsectNostril" or
				  def="Eye"]/groups
				</xpath>
				<value>
				  <li>OutsideSquishy</li>
				</value>
			  </li>

			</operations>
		</match>
	</Operation>
</Patch>
