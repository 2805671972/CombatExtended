<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[Ry]Rimcraft</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

			  <li Class="PatchOperationReplace">
				<xpath>Defs/BodyPartDef[defName="WoWScourgeSkeleton_Torso"]/hitPoints</xpath>
				<value>
				  <hitPoints>50</hitPoints>
				</value>
			  </li>

			  <li Class="PatchOperationReplace">
				<xpath>Defs/BodyPartDef[defName="WoWScourgeSkeleton_Leg"]/hitPoints</xpath>
				<value>
				  <hitPoints>38</hitPoints>
				</value>
			  </li>

			  <li Class="PatchOperationAdd">
				<xpath>
				  /Defs/BodyDef[defName="WoWScourgeSkeleton_Body"]//*[
				  def="WoWScourgeSkeleton_Torso" or 
				  def="WoWScourgeSkeleton_Neck" or 
				  def="Head" or 
				  def="Jaw" or 
				  def="WoWScourgeSkeleton_Shoulder" or
				  def="WoWScourgeSkeleton_Arm" or
				  def="WoWScourgeSkeleton_Hand" or
				  def="WoWScourgeSkeleton_Finger" or
				  def="WoWScourgeSkeleton_Toe" or
				  def="WoWScourgeSkeleton_Foot" or
				  def="WoWScourgeSkeleton_Leg"]/groups
				</xpath>
				<value>
				  <li>CoveredByNaturalArmor</li>
				</value>
			  </li>

			  <li Class="PatchOperationAdd">
				<xpath>
				  /Defs/BodyDef[defName="WoWScourgeSkeleton_Body"]//*[
				  def="Jaw"]/groups
				</xpath>
				<value>
				  <li>OutsideSquishy</li>
				</value>
			  </li>

			  <li Class="PatchOperationAdd">
				<xpath>
				  /Defs/BodyDef[defName="Tauren"]//*[
				  def="Torso" or 
				  def="Neck" or 
				  def="Head" or 
				  def="Jaw" or 
				  def="Ear" or
				  def="Nose" or
				  def="Shoulder" or
				  def="Arm" or
				  def="Hand" or
				  def="Finger" or
				  def="Toe" or
				  def="Foot" or
				  def="Leg"]/groups
				</xpath>
				<value>
				  <li>CoveredByNaturalArmor</li>
				</value>
			  </li>

			  <li Class="PatchOperationAdd">
				<xpath>
				  /Defs/BodyDef[defName="Tauren"]//*[
				  def="Jaw" or 
				  def="Nose" or
				  def="Eye"]/groups
				</xpath>
				<value>
				  <li>OutsideSquishy</li>
				</value>
			  </li>

			</operations>
		</match>
	</Operation>
</Patch>
