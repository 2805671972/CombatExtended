<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Det's Energy Weapons</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
		
			<!-- ==================== AmmoSet ========================== -->
			
			<CombatExtended.AmmoSetDef>
				<defName>AmmoSet_EnergyBolt</defName>
				<label>Energy Bolt</label>
				<ammoTypes>
					<Ammo_LaserChargePack>Bullet_EnergyBolt</Ammo_LaserChargePack>
				</ammoTypes>
				<similarTo>AmmoSet_Rifle</similarTo>
			</CombatExtended.AmmoSetDef>
			
			<!-- ================== Projectiles ================== -->
			<ThingDef Name="BaseEnergyBoltBullet" ParentName="BaseBulletCE" Abstract="true">
				<graphicData>
					<texPath>Things/Projectile/Bullet_Small</texPath>
					<graphicClass>Graphic_Single</graphicClass>
				</graphicData>
				<projectile Class="CombatExtended.ProjectilePropertiesCE">
					<damageDef>Bullet</damageDef>
					<speed>156</speed>
					<dropsCasings>true</dropsCasings>
				</projectile>
			</ThingDef>

			<ThingDef ParentName="BaseEnergyBoltBullet">
				<defName>Bullet_EnergyBolt</defName>
				<label>Energy Bolt</label>
				<projectile Class="CombatExtended.ProjectilePropertiesCE">
					<damageAmountBase>20</damageAmountBase>
					<armorPenetrationSharp>7</armorPenetrationSharp>
					<armorPenetrationBlunt>66.72</armorPenetrationBlunt>
				</projectile>
			</ThingDef>

			</value>
		</match>
	</Operation>
</Patch>