<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Thrumkin bodyDef -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<!-- Checking for the mod -->
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>[SYR] Thrumkin</modName>
			</li>

			<!-- Let's teach them which is which arm -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/BodyDef[defname = "Thrumkin_Body"]/corePart/parts/li/parts/li[customLabel = "left arm"]/groups</xpath>
				<value>
					<li>LeftArm</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/BodyDef[defname = "Thrumkin_Body"]/corePart/parts/li/parts/li[customLabel = "right arm"]/groups</xpath>
				<value>
					<li>RightArm</li>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>