		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- ========== Advanced bionic arm ========== -->

				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="GTArm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/verbs</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>fist</label>
								<capacities>
									<li>Blunt</li>
