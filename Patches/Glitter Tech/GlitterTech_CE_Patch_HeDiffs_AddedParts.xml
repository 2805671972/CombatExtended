							<li Class="CombatExtended.ToolCE">
								<label>fist</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>11</power>
								<cooldownTime>1.6</cooldownTime>
								<armorPenetration>0.125</armorPenetration>
