<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Eccentric Militors</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>

						<!-- Double Barrel Ammo Set -->
						<CombatExtended.AmmoSetDef>
							<defName>AmmoSet_23x75mmR_Eccentric_Militor_Double</defName>
							<label>12 Gauge</label>
							<ammoTypes>
								<Ammo_23x75mmR_Buck>Bullet_23x75mmR_Eccentric_Militor_Double_Buck</Ammo_23x75mmR_Buck>
								<Ammo_23x75mmR_Slug>Bullet_23x75mmR_Eccentric_Militor_Double_Slug</Ammo_23x75mmR_Slug>
								<Ammo_23x75mmR_Beanbag>Bullet_23x75mmR_Eccentric_Militor_Double_Beanbag</Ammo_23x75mmR_Beanbag>
								<Ammo_23x75mmR_ElectroSlug>Bullet_23x75mmR_Eccentric_Militor_Double_ElectroSlug</Ammo_23x75mmR_ElectroSlug>
							</ammoTypes>
						</CombatExtended.AmmoSetDef>

						<!-- Double Barrel Fire -->
						<ThingDef ParentName="Base23x75mmRBullet">
							<defName>Bullet_23x75mmR_Eccentric_Militor_Double_Buck</defName>
							<label>buckshot pellet</label>
							<graphicData>
								<texPath>Things/Projectile/Shotgun_Pellet</texPath>
								<graphicClass>Graphic_Single</graphicClass>
							</graphicData>
							<projectile Class="CombatExtended.ProjectilePropertiesCE">
								<damageAmountBase>10</damageAmountBase>
								<pelletCount>28</pelletCount><!-- Twice the usual number of buckshot pellets -->
								<armorPenetrationSharp>5</armorPenetrationSharp>
								<armorPenetrationBlunt>8.1</armorPenetrationBlunt>
								<spreadMult>17.8</spreadMult>
							</projectile>
						</ThingDef>

						<ThingDef ParentName="Base23x75mmRBullet">
							<defName>Bullet_23x75mmR_Eccentric_Militor_Double_Slug</defName>
							<label>shotgun slug</label>
							<graphicData>
								<texPath>Things/Projectile/Bullet_big</texPath>
								<graphicClass>Graphic_Single</graphicClass>
							</graphicData>
							<projectile Class="CombatExtended.ProjectilePropertiesCE">
								<speed>106</speed>
								<damageAmountBase>38</damageAmountBase>
								<pelletCount>2</pelletCount><!-- Double slugs -->
								<armorPenetrationSharp>8</armorPenetrationSharp>
								<armorPenetrationBlunt>162.5</armorPenetrationBlunt>
								<casingMoteDefname>Fleck_ShotgunShell_Green</casingMoteDefname>
								<casingFilthDefname>Filth_ShotgunAmmoCasings_Green</casingFilthDefname>
							</projectile>
						</ThingDef>

						<ThingDef ParentName="Base23x75mmRBullet">
							<defName>Bullet_23x75mmR_Eccentric_Militor_Double_Beanbag</defName>
							<label>beanbag</label>
							<graphicData>
								<texPath>Things/Projectile/Bullet_big</texPath>
								<graphicClass>Graphic_Single</graphicClass>
							</graphicData>
							<projectile Class="CombatExtended.ProjectilePropertiesCE">
								<speed>30</speed>
								<damageDef>Beanbag</damageDef>
								<damageAmountBase>13</damageAmountBase>
								<pelletCount>2</pelletCount><!-- Double beanbags -->
								<armorPenetrationBlunt>7.38</armorPenetrationBlunt>
								<spreadMult>2</spreadMult>
								<casingMoteDefname>Fleck_ShotgunShell_White</casingMoteDefname>
								<casingFilthDefname>Filth_ShotgunAmmoCasings_White</casingFilthDefname>
							</projectile>
						</ThingDef>

						<ThingDef ParentName="Base23x75mmRBullet">
							<defName>Bullet_23x75mmR_Eccentric_Militor_Double_ElectroSlug</defName>
							<label>EMP slug</label>
							<graphicData>
								<texPath>Things/Projectile/Bullet_big</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<color>(68,210,215)</color>
							</graphicData>
							<projectile Class="CombatExtended.ProjectilePropertiesCE">
								<damageDef>EMP</damageDef>
								<damageAmountBase>29</damageAmountBase>
								<pelletCount>2</pelletCount><!-- Double EMP slugs -->
								<armorPenetrationSharp>0</armorPenetrationSharp>
								<armorPenetrationBlunt>0</armorPenetrationBlunt>
								<empShieldBreakChance>0.5</empShieldBreakChance>
								<speed>60</speed>
								<casingMoteDefname>Fleck_ShotgunShell_Black</casingMoteDefname>
								<casingFilthDefname>Filth_ShotgunAmmoCasings_Black</casingFilthDefname>
							</projectile>
						</ThingDef>

					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>