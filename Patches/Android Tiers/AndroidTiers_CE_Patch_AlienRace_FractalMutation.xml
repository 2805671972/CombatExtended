		<operations>

			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>[1.0] Android tiers</modName>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>*/ThingDef[defName="Abomination"]</xpath>
