                <armorPenetrationBlunt>0.66</armorPenetrationBlunt>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <surpriseAttack>
                  <extraMeleeDamages>
                    <li>
                      <def>Stun</def>
                      <amount>8</amount>
                    </li>
                  </extraMeleeDamages>
                </surpriseAttack>
              </li>
            </tools>
          </value>
