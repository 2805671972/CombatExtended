    <match Class="PatchOperationSequence">
      <operations>

        <!-- === Bison Wool === -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="AEXP_WoolBison"]/statBases</xpath>

          <value>
            <StuffPower_Armor_Sharp>0.07</StuffPower_Armor_Sharp>
            <StuffPower_Armor_Blunt>0.056</StuffPower_Armor_Blunt>
          </value>
        </li>

        <!-- === Brownfur Leather === -->
        <li Class="PatchOperationRemove">
          <xpath>/Defs/ThingDef[defName="AEXP_Leather_Brownfur"]/statBases/StuffPower_Armor_Sharp</xpath>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="AEXP_Leather_Brownfur"]/statBases</xpath>

          <value>
            <StuffPower_Armor_Sharp>0.03</StuffPower_Armor_Sharp>
            <StuffPower_Armor_Blunt>0.024</StuffPower_Armor_Blunt>
          </value>
        </li>

        <!-- === Sheep Wool === -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="AEXP_WoolSheep"]/statBases</xpath>

          <value>
            <StuffPower_Armor_Sharp>0.04</StuffPower_Armor_Sharp>
            <StuffPower_Armor_Blunt>0.04</StuffPower_Armor_Blunt>
          </value>
        </li>

        <!-- === Yak Wool === -->
        <li Class="PatchOperationRemove">
          <xpath>
            /Defs/ThingDef[defName="AEXP_WoolYak"]/statBases/StuffPower_Armor_Sharp |
