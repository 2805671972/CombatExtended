          </value>
        </li>

        <!-- === Guinea Pig Leather === -->
        <li Class="PatchOperationRemove">
          <xpath>
            /Defs/ThingDef[defName="AEXP_Leather_GuineaPig"]/statBases/StuffPower_Armor_Sharp |
