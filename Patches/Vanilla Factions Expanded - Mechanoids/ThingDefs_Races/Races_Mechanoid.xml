        <baseBodySize>2.0</baseBodySize>
      </value>
    </li>

    <li Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="VFE_Mech_Centipede"]/tools</xpath>
      <value>
        <tools>
