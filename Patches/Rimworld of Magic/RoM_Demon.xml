<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
		
			<li Class="ModCheck.isModLoaded">
				<modName>A RimWorld of Magic</modName>
				<yourMod>Rimworld of Magic CE Patch</yourMod>
			</li>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnDefs[defName="TM_DemonR"]</xpath>
				<value>
					<li Class="CombatExtended.RacePropertiesExtensionCE">
						<bodyShape>Humanoid</bodyShape>
					</li>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PawnDefs[defName="TM_DemonR"]/tools</xpath>
				<value>
					<tools>
					  <li Class="CombatExtended.ToolCE">
						<label>left claw</label>
						<capacities>
						  <li>TM_ClawSweep</li>
						</capacities>
						<power>18</power>
						<cooldownTime>1.1</cooldownTime>
						<linkedBodyPartsGroup>Demon_LeftArm</linkedBodyPartsGroup>
						<armorPenetration>0.32</armorPenetration>
					  </li>
					  <li Class="CombatExtended.ToolCE">
						<label>right claw</label>
						<capacities>
						  <li>TM_ClawSweep</li>
						</capacities>
						<power>23</power>
						<cooldownTime>1.3</cooldownTime>
						<linkedBodyPartsGroup>Demon_RightArm</linkedBodyPartsGroup>
						<armorPenetration>0.32</armorPenetration>
					  </li>
					  <li Class="CombatExtended.ToolCE">
						<label>hoof</label>
						<capacities>
						  <li>Blunt</li>
						</capacities>
						<power>32</power>
						<cooldownTime>2</cooldownTime>
						<linkedBodyPartsGroup>Demon_Legs</linkedBodyPartsGroup>
						<armorPenetration>0.18</armorPenetration>
					  </li>
					</tools>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>