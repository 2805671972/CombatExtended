<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
		
			<li Class="ModCheck.isModLoaded">
				<modName>A RimWorld of Magic</modName>
				<yourMod>Rimworld of Magic CE Patch</yourMod>
			</li>
			
			<!-- Lesser Sentinel -->
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnDefs[defName="TM_Lesser_SentinelR"]</xpath>
				<value>
					<li Class="CombatExtended.RacePropertiesExtensionCE">
						<bodyShape>Humanoid</bodyShape>
					</li>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PawnDefs[defName="TM_Lesser_SentinelR"]/tools</xpath>
				<value>
					<tools>
					  <li Class="CombatExtended.ToolCE">
						<label>claws</label>
						<capacities>
						  <li>Cut</li>
						</capacities>
						<power>6</power>
						<cooldownTime>1</cooldownTime>
						<linkedBodyPartsGroup>Sentinel_Claws</linkedBodyPartsGroup>
						<armorPenetration>0.32</armorPenetration>
					  </li>
					  <li Class="CombatExtended.ToolCE">
						<label>teeth</label>
						<capacities>
						  <li>Bite</li>
						</capacities>
						<power>12</power>
						<cooldownTime>1.6</cooldownTime>
						<linkedBodyPartsGroup>Sentinel_Teeth</linkedBodyPartsGroup>
						<armorPenetration>0.42</armorPenetration>
					  </li>
					</tools>
				</value>
			</li>
			
			<!-- Sentinel -->
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnDefs[defName="TM_SentinelR"]</xpath>
