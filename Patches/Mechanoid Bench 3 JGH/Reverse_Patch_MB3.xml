<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Mechanoid Bench 3</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Gun_InfernoCannon" or @Name="Gun_ChargeBlasterHeavyBase"]/destroyOnDrop</xpath>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Gun_InfernoCannon" or @Name="Gun_ChargeBlasterHeavyBase"]</xpath>
                    <value>
                        <destroyOnDrop>true</destroyOnDrop>
                    </value>
                </li>

                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="Gun_ChargeBlasterHeavyBase"]/tradeability</xpath>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="Gun_ChargeBlasterHeavyBase"]</xpath>
                    <value>
                        <tradeability>None</tradeability>
                    </value>
                </li>

                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Gun_InfernoCannon"]/tradeability</xpath>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Gun_InfernoCannon"]</xpath>
                    <value>
                        <tradeability>None</tradeability>
                    </value>
                </li>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Factions Expanded - Mechanoids</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

                            <li Class="PatchOperationRemove">
                                <xpath>/Defs/ThingDef[defName="VFE_Gun_AdvancedNeedle" or defName="VFE_Gun_AdvancedChargeLance" or @Name="VFE_Gun_ChargeBlasterLightBase"]/destroyOnDrop</xpath>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="VFE_Gun_AdvancedNeedle" or defName="VFE_Gun_AdvancedChargeLance" or @Name="VFE_Gun_ChargeBlasterLightBase"]</xpath>
                                <value>
                                    <destroyOnDrop>true</destroyOnDrop>
                                </value>
                            </li>

                            <li Class="PatchOperationRemove">
                                <xpath>/Defs/ThingDef[defName="VFE_Gun_AdvancedNeedle" or defName="VFE_Gun_AdvancedChargeLance" or @Name="VFE_Gun_ChargeBlasterLightBase"]/tradeability</xpath>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="VFE_Gun_AdvancedNeedle" or defName="VFE_Gun_AdvancedChargeLance" or @Name="VFE_Gun_ChargeBlasterLightBase"]</xpath>
                                <value>
                                    <tradeability>None</tradeability>
                                </value>
                            </li>

                            <li Class="PatchOperationRemove">
                                <xpath>/Defs/ThingDef[defName="VFE_Gun_AdvancedNeedle" or defName="VFE_Gun_AdvancedChargeLance" or @Name="VFE_Gun_ChargeBlasterLightBase"]/menuHidden</xpath>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="VFE_Gun_AdvancedNeedle" or defName="VFE_Gun_AdvancedChargeLance" or @Name="VFE_Gun_ChargeBlasterLightBase"]</xpath>
                                <value>
                                    <menuHidden>True</menuHidden>
                                </value>
                            </li>

                        </operations>
                    </match>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>