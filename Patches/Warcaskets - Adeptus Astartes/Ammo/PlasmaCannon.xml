<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Warcaskets: Adeptus Astartes</li>
    </mods>
	<match Class="PatchOperationAdd">
	<xpath>Defs</xpath>
	<value>

    <!-- "Whatever happens, we have got The Emperor's blessing. They have not." -->

    <!-- === Ammo Sets === -->
    <CombatExtended.AmmoSetDef>
      <defName>AmmoSet_PlasmaCanister</defName>
      <label>plasma canister</label>
      <ammoTypes>
        <Ammo_Flamethrower_Prometheum>Bullet_PlasmaCannon</Ammo_Flamethrower_Prometheum>
      </ammoTypes>
    </CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="Ammo20x102mmNATOBase" ParentName="SmallAmmoBase" Abstract="True">
		<description>Large caliber cartridge used by autocannons.</description>
		<statBases>
			<Mass>0.254</Mass>
			<Bulk>0.34</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo20x102mmNATO</li>
		</thingCategories>
		<stackLimit>1000</stackLimit>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo20x102mmNATOBase">
		<defName>Ammo_20x102mmNATO_AP</defName>
		<label>20x102mm NATO cartridge (AP)</label>
		<graphicData>
			<texPath>Things/Ammo/HighCaliber/AP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>1.04</MarketValue>
		</statBases>
		<ammoClass>ArmorPiercing</ammoClass>
		<cookOffProjectile>Bullet_20x102mmNATO_AP</cookOffProjectile>
	</ThingDef>

    <!-- === Projectiles === -->
    <ThingDef Class="CombatExtended.Lasers.LaserBeamDefCE" ParentName="LaserBulletBlue">
      <defName>Bullet_PlasmaCannon</defName>
      <label>melta beam</label>            
      <projectile Class="CombatExtended.ProjectilePropertiesCE">
        <damageDef>Bullet</damageDef>
        <damageAmountBase>150</damageAmountBase>
        <armorPenetrationSharp>500</armorPenetrationSharp>
        <armorPenetrationBlunt>0.001</armorPenetrationBlunt> <!-- The overall pressure exerted by a laser beam striking something is, unsuprisingly, negligable. -->
      </projectile>      
    </ThingDef>

	</value>
	</match>
	</Operation>
</Patch>