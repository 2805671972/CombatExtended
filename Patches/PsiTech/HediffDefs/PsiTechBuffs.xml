<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>PsiTech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- == PTMeleeMastery == -->
				<!-- statOffsets -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="PTMeleeMastery"]/stages/li[1]/statOffsets</xpath>
					<value>
						<statOffsets>
							<MeleeDodgeChance>1</MeleeDodgeChance>
							<MeleePenetrationFactor>0.5</MeleePenetrationFactor>
						</statOffsets>
					</value>
				</li>

				<!-- == PTRangedMastery == -->
				<!-- statOffsets -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/HediffDef[defName="PTRangedMastery"]/stages/li[1]/statOffsets/ShootingAccuracyPawn</xpath>
				</li>
				<!-- statFactors -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/HediffDef[defName="PTRangedMastery"]/stages/li[1]</xpath>
					<value>
						<statFactors>
							<ShootingAccuracyPawn>1.5</ShootingAccuracyPawn>
							<AimingAccuracy>1.25</AimingAccuracy>
						</statFactors>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>