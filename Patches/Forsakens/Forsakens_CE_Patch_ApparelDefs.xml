<?xml version="1.0" encoding="utf-8" ?>
<!-- made by steamuser Kik0hi, with edits from sumghai -->
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>

			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Forsakens</modName>
			</li>

			<!-- ========== Forsaken Hoods do not need to be patched (negligible bulk) ========== -->

			<!-- ========== Forsaken Cloak ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Forsaken_Cloak"]/statBases</xpath>
				<value>
					<Bulk>4</Bulk>
					<WornBulk>4</WornBulk>
				</value>
			</li>

			<!-- ========== Forsaken Helmet ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="TForsakenH"]/statBases</xpath>
				<value>
					<Bulk>6</Bulk>
					<WornBulk>1.5</WornBulk>
				</value>
			</li>

			<!-- ========== Forsaken Armor ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="TForsakenA"]/statBases</xpath>
				<value>
					<Bulk>15</Bulk>
					<WornBulk>15</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="TForsakenA"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>15</CarryBulk>
					<CarryWeight>40</CarryWeight>
				</value>
			</li>



		</operations>
	</Operation>
</Patch>