<?xml version="1.0" encoding="utf-8" ?>

<Patch>
    <!--==========================Body&Stuffs=================================-->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>*/AlienRace.ThingDef_AlienRace[defName="Alien_Forsaken"]</xpath>
        <value>
            <li Class="CombatExtended.RacePropertiesExtensionCE">
                <bodyShape>Humanoid</bodyShape>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>*/AlienRace.ThingDef_AlienRace[defName="Alien_Forsaken"]/tools</xpath>
        <value>
            <tools>
                <li Class="CombatExtended.ToolCE">
                    <label>left fist</label>
                    <capacities>
                        <li>Blunt</li>
                    </capacities>
                    <power>8.2</power>
                    <cooldownTime>0.9</cooldownTime>
                    <linkedBodyPartsGroup>LeftHandClawsGroup</linkedBodyPartsGroup>
                    <surpriseAttack>
                        <extraMeleeDamages>
                            <li>
                                <def>Stun</def>
                                <amount>14</amount>
                            </li>
                        </extraMeleeDamages>
                    </surpriseAttack>
                    <armorPenetration>0.1</armorPenetration>
                </li>
                <li Class="CombatExtended.ToolCE">
                    <label>right fist</label>
                    <capacities>
                        <li>Blunt</li>
                    </capacities>
                    <power>8.2</power>
                    <cooldownTime>0.9</cooldownTime>
                    <linkedBodyPartsGroup>RightHandClawsGroup</linkedBodyPartsGroup>
                    <surpriseAttack>
                        <extraMeleeDamages>
                            <li>
                                <def>Stun</def>
                                <amount>14</amount>
                            </li>
                        </extraMeleeDamages>
                    </surpriseAttack>
                    <armorPenetration>0.1</armorPenetration>
                </li>
            </tools>
        </value>
    </Operation>

    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationTest">
                <xpath>*/AlienRace.ThingDef_AlienRace[defName="Alien_Forsaken"]/comps</xpath>
                <success>Invert</success>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>*/AlienRace.ThingDef_AlienRace[defName="Alien_Forsaken"]</xpath>
                <value>
                    <comps />
                </value>
            </li>
        </operations>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>*/AlienRace.ThingDef_AlienRace[defName="Alien_Forsaken"]/comps</xpath>
        <value>
            <li>
                <compClass>CombatExtended.CompPawnGizmo</compClass>
            </li>
            <li Class="CombatExtended.CompProperties_Suppressable" />
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Forsaken"]/race/baseHealthScale</xpath>
        <value>
            <baseHealthScale>1</baseHealthScale>
        </value>
    </Operation>
</Patch>