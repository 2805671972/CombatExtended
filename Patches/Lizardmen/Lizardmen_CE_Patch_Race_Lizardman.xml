<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>

			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Lizardmen</modName>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Races_Lizardman"]</xpath>
				<value>
					<li Class="CombatExtended.RacePropertiesExtensionCE">
						<bodyShape>Humanoid</bodyShape>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Races_Lizardman"]/statBases</xpath>
				<value>
					<MeleeDodgeChance>1</MeleeDodgeChance>
					<MeleeCritChance>1.33</MeleeCritChance>
					<MeleeParryChance>1.25</MeleeParryChance>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Races_Lizardman"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.04</ArmorRating_Blunt>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Races_Lizardman"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.08</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Races_Lizardman"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>left claws</label>
							<capacities>
								<li>Scratch</li>
							</capacities>
							<power>9</power>
							<cooldownTime>1.65</cooldownTime>
							<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
							<armorPenetration>0.2</armorPenetration>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>right claws</label>
							<capacities>
								<li>Scratch</li>
							</capacities>
							<power>9</power>
							<cooldownTime>1.65</cooldownTime>
							<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
							<armorPenetration>0.2</armorPenetration>
						</li>
						<li Class="CombatExtended.ToolCE">
							<capacities>
								<li>Bite</li>
							</capacities>
							<power>10</power>
							<cooldownTime>2.0</cooldownTime>
							<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
							<armorPenetration>0.2</armorPenetration>
							<chanceFactor>0.15</chanceFactor>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>head</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>6</power>
							<cooldownTime>1.85</cooldownTime>
							<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
							<armorPenetration>0.08</armorPenetration>
							<chanceFactor>0.2</chanceFactor>
						</li>
					</tools>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Races_Lizardman"][not(comp)]</xpath>
				<value>
					<comps />
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Races_Lizardman"]/comps</xpath>
				<value>
					<li>
						<compClass>CombatExtended.CompPawnGizmo</compClass>
					</li>
					<li Class="CombatExtended.CompProperties_Suppressable" />
				</value>
			</li>

		</operations>
	</Operation>
</Patch>