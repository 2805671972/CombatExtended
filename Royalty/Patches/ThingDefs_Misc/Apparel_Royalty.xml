<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<!-- ========== Ruffle Shirt, Royal Vest, Royal Robe ========== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_ShirtRuffle" or defName="Apparel_VestRoyal" or defName="Apparel_RobeRoyal"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>1</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<!-- ========== Corset ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_Corset"]/statBases</xpath>
		<value>
			<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<!-- ========== Psychic Shirt, Psychic Vest, Psychic Robe ========== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_PsyfocusShirt" or defName="Apparel_PsyfocusVest" or defName="Apparel_PsyfocusRobe"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>0.03</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_PsyfocusShirt" or defName="Apparel_PsyfocusVest" or defName="Apparel_PsyfocusRobe"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>0.045</ArmorRating_Blunt>
		</value>
	</Operation>

	<!-- ========== Cataphract Armor ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/statBases</xpath>
		<value>
			<Bulk>100</Bulk>
			<WornBulk>15</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>600</MaxHitPoints>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/statBases/Mass</xpath>
		<value>
			<Mass>80</Mass>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/statBases/Flammability</xpath>
		<value>
			<Flammability>0</Flammability>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>28</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>60</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/costList</xpath>
		<value>
			<DevilstrandCloth>60</DevilstrandCloth>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/equippedStatOffsets/MoveSpeed</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/equippedStatOffsets</xpath>
		<value>
			<CarryWeight>80</CarryWeight>
			<CarryBulk>20</CarryBulk>
			<ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
			<ToxicSensitivity>-0.50</ToxicSensitivity>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/apparel/bodyPartGroups</xpath>
		<value>
			<li>Hands</li>
			<li>Feet</li>
		</value>
	</Operation>

</Patch>

