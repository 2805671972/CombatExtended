<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--Projectiles-->

	<ThingDef ParentName="BasePlasmaBullet">
		<defName>Bullet_PlasmaCannon_Overcharged</defName>
		<label>plasma cannon bolt</label>
		<graphicData>
			<drawSize>1.5</drawSize>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>100</speed>
			<damageAmountBase>110</damageAmountBase>
			<armorPenetrationSharp>100</armorPenetrationSharp>
			<extraDamages>
				<li>
					<def>EMP</def>
					<amount>18</amount>
					<armorPenetration>5</armorPenetration>
					<chance>0.85</chance>
				</li>
			</extraDamages>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<damageAmountBase>56</damageAmountBase>
				<explosiveDamageType>Burn</explosiveDamageType>
				<explosiveRadius>2.5</explosiveRadius>
				<explosionSound>MortarBomb_Explode</explosionSound>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			</li>
		</comps>
	</ThingDef>

</Defs>